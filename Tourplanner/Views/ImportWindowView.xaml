            <Label Grid.Row="0" Grid.Column="0" Content="Directory path:" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="15"/>
            <TextBox Grid.Row="0" Grid.Column="1" Margin="4" MaxLength="200" Text="{Binding DirectoryPath}"/>

            <Button Grid.Row="1" Grid.Column="1" Margin="196,10,376,-2" Content="Cancel" Width="100" Command="{Binding CancelImportButtonCommand}" IsDefault="True"/>
            <Button Grid.Row="1" Grid.Column="1" Margin="355,10,217,-2" Content="Import" Width="100" Command="{Binding ImportButtonCommand}" IsDefault="True"/>
